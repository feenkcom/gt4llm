Class {
	#name : #GtLOpenAIMessagesGroup,
	#superclass : #GtLOpenAIGroup,
	#category : #'Gt4Llm-OpenAI'
}

{ #category : #accessing }
GtLOpenAIMessagesGroup class >> itemClass [
	^ GtOpenAIMessage
]

{ #category : #accessing }
GtLOpenAIMessagesGroup >> gtMessagesFor: aView [
	<gtView>
	^ aView columnedList
		title: 'Messages';
		priority: 1;
		items: [ self items ];
		column: 'Role' text: #role width: 60;
		column: 'Message' text: #content
]
